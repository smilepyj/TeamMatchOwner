<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApproveMatchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@color/color_313131">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_regular"
            android:text="@string/approvematch_title"
            android:textColor="@color/color_313131"
            android:textSize="@dimen/font_size_16" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8FA"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_D2D2D2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="@string/approvematch_header"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="@string/approvematch_sub_header"
                android:textColor="@color/color_007338"
                android:textSize="@dimen/font_size_12"
/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_size_10"
            android:paddingEnd="@dimen/dimen_size_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dr_background_approve_match_info"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_place"/>

                        <TextView
                            android:id="@+id/tv_approve_match_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen_size_10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/font_size_14"
                            android:textColor="@color/color_313131"/>

                        <TextView
                            android:id="@+id/tv_approve_match_ground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen_size_10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/font_size_14"
                            android:textColor="@color/color_007338"/>

                        <ImageButton
                            android:id="@+id/ib_approve_match_ground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_size_10"
                            android:background="@drawable/ic_information"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_time"/>

                        <TextView
                            android:id="@+id/tv_approve_match_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen_size_10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_313131"
                            android:textSize="@dimen/font_size_14"/>

                        <TextView
                            android:layout_width="@dimen/dimen_size_2"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_size_10"
                            android:layout_marginStart="@dimen/dimen_size_10"
                            android:background="@color/color_A8A8A8"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tv_approve_match_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/font_size_14"
                            android:textColor="@color/color_313131"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/approvematch_cost"
                            android:textColor="@color/color_007338"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_approve_match_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen_size_10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/font_size_15"
                            android:textColor="@color/color_313131"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_regular"
                                android:includeFontPadding="false"
                                android:text="@string/approvematch_host"
                                android:textColor="@color/color_007338"
                                android:textSize="@dimen/font_size_14"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_size_5"
                                android:textSize="@dimen/font_size_14"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_approve_match_host_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="@dimen/dimen_size_2"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dimen_size_10"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@color/color_A8A8A8"
                                    android:textSize="@dimen/font_size_14" />

                                <TextView
                                    android:id="@+id/tv_approve_match_host_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:layout_width="@dimen/dimen_size_2"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dimen_size_10"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@color/color_A8A8A8"
                                    android:textSize="@dimen/font_size_14" />

                                <TextView
                                    android:id="@+id/tv_approve_match_host_member"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/dimen_size_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_team"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/approvematch_manager"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:id="@+id/tv_approve_match_host_manager"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/matchproc_listview_9"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:id="@+id/tv_approve_match_host_tel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/matchproc_listview_0"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <ImageButton
                                    android:id="@+id/ib_approve_match_host_tel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@drawable/ic_phone_call"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_regular"
                                android:includeFontPadding="false"
                                android:text="@string/approvematch_guest"
                                android:textColor="@color/color_007338"
                                android:textSize="@dimen/font_size_14"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_size_5"
                                android:textSize="@dimen/font_size_14"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_approve_match_guest_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="@dimen/dimen_size_2"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dimen_size_10"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@color/color_A8A8A8"
                                    android:textSize="@dimen/font_size_14" />

                                <TextView
                                    android:id="@+id/tv_approve_match_guest_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:layout_width="@dimen/dimen_size_2"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dimen_size_10"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@color/color_A8A8A8"
                                    android:textSize="@dimen/font_size_14" />

                                <TextView
                                    android:id="@+id/tv_approve_match_guest_member"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/dimen_size_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_team"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/approvematch_manager"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:id="@+id/tv_approve_match_guest_manager"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_size_10"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/matchproc_listview_9"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <TextView
                                    android:id="@+id/tv_approve_guest_host_tel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:textSize="@dimen/font_size_14"
                                    android:textColor="@color/color_313131"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskr_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/matchproc_listview_0"
                                    android:textColor="@color/color_313131"
                                    android:textSize="@dimen/font_size_14"/>

                                <ImageButton
                                    android:id="@+id/ib_approve_guest_host_tel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_size_10"
                                    android:background="@drawable/ic_phone_call"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"
            android:paddingTop="@dimen/dimen_size_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/cb_approve_match_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_5"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text="@string/approvematch_warning"
                    android:textSize="@dimen/font_size_11"
                    android:textColor="@color/color_E60012"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/ll_approve_match_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/dr_button_dialog_cancel"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/approvematch_no_title"
                    android:textColor="@color/color_959595"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/approvematch_no_contents"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/color_959595"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_approve_match_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/dr_button_dialog_ok"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/approvematch_yes_title"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/approvematch_yes_contents"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>