<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9.75"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:background="@drawable/ic_listview_item_background"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.4"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_listview_place" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_listview_match_proc_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:minHeight="0dp"
                                android:singleLine="true"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_ground"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:minHeight="0dp"
                                android:singleLine="true"
                                android:textColor="@color/color_listview_match_proc_contents_accent"
                                android:textSize="@dimen/font_size_14" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                            <ImageButton
                                android:id="@+id/ib_listview_match_proc_ground"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_listview_information"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.4"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_listview_time" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_listview_match_proc_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:minHeight="0dp"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/listview_item_sidebar_margin_horizontal"
                                android:background="@color/color_listview_match_proc_sidebar"
                                android:fontFamily="@font/notosanskr_medium"
                                android:minHeight="0dp"
                                android:textSize="@dimen/font_size_5" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:minHeight="0dp"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_listview_team" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_listview_match_proc_team_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/listview_item_sidebar_margin_horizontal"
                                android:background="@color/color_listview_match_proc_sidebar"
                                android:fontFamily="@font/notosanskr_medium"
                                android:minHeight="0dp"
                                android:textSize="@dimen/font_size_5" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_team_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/listview_item_sidebar_margin_horizontal"
                                android:background="@color/color_listview_match_proc_sidebar"
                                android:fontFamily="@font/notosanskr_medium"
                                android:minHeight="0dp"
                                android:textSize="@dimen/font_size_5" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_team_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <ImageView
                                android:id="@+id/iv_listview_match_proc_pre_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_pay" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_pre_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:text="@string/match_proc_pre_payment_yes"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_list_view_match_proc_opponent_line"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="@dimen/listview_match_proc_padding_vertical"
                            android:background="@color/color_listview_match_proc_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_list_view_match_proc_opponent_info"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_opponent_info"
                                android:textSize="@dimen/font_size_14"
                                android:text="@string/match_proc_opponent_info"/>

                            <TextView
                                android:id="@+id/tv_listview_match_proc_opponent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14"
                                android:layout_marginLeft="5dp"/>

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/listview_item_sidebar_margin_horizontal"
                                android:background="@color/color_listview_match_proc_sidebar"
                                android:fontFamily="@font/notosanskr_medium"
                                android:minHeight="0dp"
                                android:textSize="@dimen/font_size_5" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_opponent_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/listview_item_sidebar_margin_horizontal"
                                android:background="@color/color_listview_match_proc_sidebar"
                                android:fontFamily="@font/notosanskr_medium"
                                android:minHeight="0dp"
                                android:textSize="@dimen/font_size_5" />

                            <TextView
                                android:id="@+id/tv_listview_match_proc_opponent_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_listview_match_proc_contents"
                                android:textSize="@dimen/font_size_14" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/listview_search_result_padding_vertical"
                    android:background="@color/color_listview_match_proc_border" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_listview_match_proc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_match_proc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textColor="@color/color_listview_match_proc_name_1"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>