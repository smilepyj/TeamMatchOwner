<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_360"
    android:layout_margin="@dimen/dimen_size_5"
    android:background="@drawable/dr_background_list_item"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_size_5"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/ll_listview_match_proc_contents"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7.4"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_size_10"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.3"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_place" />

                <TextView
                    android:id="@+id/tv_listview_match_proc_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:singleLine="true"
                    android:textColor="@color/color_313131"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_listview_match_proc_ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:singleLine="true"
                    android:textColor="@color/color_007338"
                    android:textSize="@dimen/font_size_14" />

                <ImageButton
                    android:id="@+id/ib_listview_match_proc_ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_information"
                    android:paddingStart="@dimen/dimen_size_5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.3"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_time" />

                <TextView
                    android:id="@+id/tv_listview_match_proc_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:textColor="@color/color_313131"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="@dimen/dimen_size_2"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_size_10"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:background="@color/color_A8A8A8"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_listview_match_proc_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:textColor="@color/color_313131"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.3"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:singleLine="true"
                    android:text="@string/matchproc_listview_cost"
                    android:textColor="@color/color_007338"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_listview_match_proc_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dimen_size_10"
                    android:textColor="@color/color_313131"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dimen_size_10"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/color_D2D2D2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.6"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_size_10"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/matchproc_listview_host"
                        android:textColor="@color/color_007338"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_team" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_host_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="@dimen/dimen_size_2"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_size_10"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@color/color_A8A8A8"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_host_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="@dimen/dimen_size_2"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_size_10"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@color/color_A8A8A8"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_host_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="@dimen/dimen_size_16"
                        android:layout_height="@dimen/dimen_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:text="@string/matchproc_listview_manager"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_host_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:text="@string/matchproc_listview_9"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_host_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/matchproc_listview_0"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <ImageButton
                        android:id="@+id/ib_listview_match_proc_host_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@drawable/ic_phone_call" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/matchproc_listview_guest"
                        android:textColor="@color/color_007338"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_team" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_guest_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="@dimen/dimen_size_2"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_size_10"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@color/color_A8A8A8"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_guest_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="@dimen/dimen_size_2"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_size_10"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@color/color_A8A8A8"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_guest_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="@dimen/dimen_size_16"
                        android:layout_height="@dimen/dimen_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:text="@string/matchproc_listview_manager"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_guest_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dimen_size_10"
                        android:text="@string/matchproc_listview_9"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_listview_match_proc_guest_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/matchproc_listview_0"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/font_size_14" />

                    <ImageButton
                        android:id="@+id/ib_listview_match_proc_guest_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@drawable/ic_phone_call" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_D2D2D2" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_listview_match_proc_state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_listview_match_proc_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
</LinearLayout>